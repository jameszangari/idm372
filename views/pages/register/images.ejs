<%- include('../../_partials/header', {pageTitle: pageTitle}); %>
    <%- include('../../_components/header-navigation', { title: endpoints.pages.registerImages.title }); %>

        <h1 class="l-grid__header u-heading-2 u-align-center">Add a picture of yourself for your profile! Be Authentic!</h1>

        <form type="images" class="o-button-upload__group u-flex-center js-images" id="firestore_form">
            <section class="o-button-upload__group__section">
                <button class="o-button-upload" data-index="0"></button>
                <input type="file" class="js-profile-picture" data-index="0" name="pp_0" accept=".jpg,.png" hidden></button>
            </section>

            <section class="o-button-upload__group__section">
                <button class="o-button-upload" data-index="1"></button>
                <input type="file" class="js-profile-picture" data-index="1" name="pp_1" accept=".jpg,.png" hidden></button>
                
                <button class="o-button-upload" data-index="2"></button>
                <input type="file" class="js-profile-picture" data-index="2" name="pp_2" accept=".jpg,.png" hidden></button>
                
                <button class="o-button-upload" data-index="3"></button>
                <input type="file" class="js-profile-picture" data-index="3" name="pp_3" accept=".jpg,.png" hidden></button>
            </section>
        </form>

    <%- include('../../_components/buttons', {
        url: endpoints.pages.browse.url + '?completed=true',
        label: 'Next' , classnames: 'o-button-submit',
        form: '#firestore_form'
    }); %>
    
<%- include('../../_partials/footer'); %>