<%- include('../../_partials/header', {pageTitle: pageTitle}); %>

<%- include('../../_components/header-navigation', { 
    title: endpoints.pages.registerPlaylist.title
}); %>

    <h2 class="l-grid__header u-heading-2 u-align-center">Choose a playlist that you love to listen to!</h2>

    <h2 class="l-grid__header u-heading-2 u-align-center">Other users will be able to see this on your profile.</h2>

    <form class="o-search-form" id="searchSpotify">
        <input class="o-search-form--input" type="text" id="search_input" data-searchcategory="playlist"
            placeholder="SEARCH">
        <button class="o-search-form--button" type="submit" id="search_spotify_button"><i
            class="fas fa-search"></i></button>
    </form>

    <form id="firestore_form" type="strings" hidden>
        <input id="result_id" type="text" name="playlist_id">
        <input id="result_title" type="text" name="playlist_title">
        <input id="result_artist" type="text" name="playlist_artist">
        <input id="result_thumb" type="text" name="playlist_thumb">
        <input id="result_album" type="text" name="playlist_album">
    </form>

    <div class="o-modal" hidden>
        <button class="o-modal--close">Done</button>
        <div class="o-modal--group" id="search_results"></div>
    </div>

    <div class="o-spotify-choice" hidden>
        <button class="o-spotify-choice--edit"></button>
        <div class="o-spotify-choice--area"></div>
    </div>

    <%- include('../../_components/buttons', { 
        url: endpoints.pages.registerGenres.url, 
        label: 'skip',
        classnames: 'o-button-skip',
        form: '#firestore_form'
    }); %>

<%- include('../../_partials/footer'); %>