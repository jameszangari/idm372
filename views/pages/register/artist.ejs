<%- include('../../_partials/header', {pageTitle: pageTitle}); %>

<%- include('../../_components/header-navigation', { 
    title: endpoints.registerArtist.title
}); %>

    <h2 class="l-grid__header u-heading-2 u-align-center">Choose your favorite artist</h2>

    <form class="o-search-form" id="searchSpotify">
        <input class="o-search-form--input" type="text" id="search_input" data-searchcategory="artist"
            placeholder="SEARCH">
        <button class="o-search-form--button" type="submit" id="search_spotify_button"><i
                class="fas fa-search"></i></button>
    </form>

    <form class="o-form" id="firestore_form" type="strings" hidden>
        <input id="result_id" type="text" name="artist_id">
        <input id="result_title" type="text" name="artist_title">
        <input id="result_thumb" type="text" name="artist_thumb">
        <input id="result_album" type="text" name="artist_album">
    </form>

    <div class="o-modal" hidden>
        <button class="o-modal--close">Done</button>
        <div class="o-modal--group" id="search_results"></div>
    </div>

    <div class="o-spotify-choice" hidden>
        <div class="o-spotify-choice--cancel"></div>
        <div class="o-spotify-choice--area"></div>
    </div>

    <%- include('../../_components/buttons', { 
        url: endpoints.registerPlaylist.url, 
        label: 'skip',
        classnames: 'o-button-skip',
        form: '#firestore_form'
    }); %>

<%- include('../../_partials/footer'); %>