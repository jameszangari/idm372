<%- include('../../_partials/header', {pageTitle: pageTitle}); %>

<%- include('../../_components/header-navigation', { 
    title: endpoints.registerAnthem.title
}); %>
    
    <h2 class="l-grid__header u-heading-2 u-align-center">Choose your Anthem, a song that others can play while viewing your profile</h2>

    <form class="o-search-form" id="searchSpotify">
        <input class="o-search-form--input" type="text" id="search_input" data-searchcategory="track"
            placeholder="SEARCH">
        <button class="o-search-form--button" type="submit" id="search_spotify_button"><i
            class="fas fa-search"></i></button>
    </form>

    <form class="o-form" id="firestore_form" type="strings" hidden>
        <input class="o-form--input" id="result_id" type="text" name="anthem_id">
        <input class="o-form--input" id="result_title" type="text" name="anthem_title">
        <input class="o-form--input" id="result_artist" type="text" name="anthem_artist">
        <input class="o-form--input" id="result_thumb" type="text" name="anthem_thumb">
        <input class="o-form--input" id="result_album" type="text" name="anthem_album">
    </form>

    <div class="o-spotify-select" hidden>
        <button class="o-spotify-select--close">Done</button>
        <div class="o-spotify-select--group" id="search_results"></div>
    </div>
    <div class="o-spotify-choice" hidden>
        <button onclick="return confirm('Are you sure you want to Delete?');" class="o-spotify-choice--cancel"></button>
        <div class="o-spotify-choice--area"></div>
    </div>

    <%- include('../../_components/buttons', { 
        url: endpoints.registerArtist.url, 
        label: 'Next',
        classnames: 'o-button-primary',
        form: '#firestore_form'
    }); %>

<%- include('../../_partials/footer'); %>